---
import Card from "@/components/layout/blog/card.astro";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";


const allPosts = await getCollection("articles");
// const tags = ['Devops', 'Frontend','Backend', 'Atro']
// console.log(allPosts)
---

<Layout title="Articles">
  <main class="w-full bg-dark-navy">
    <section class="text-center text-8xl w-full  sm:w-3/4 text-white pb-20 sm:pb-40 bg-dark-navy">

    <div class="min-h-screen xl:px-0 px-10 pt-20 max-w-[51rem] mx-auto flex flex-col gap-y-4">
       {
      allPosts.map((post,index) => (
        <Card post={post} index={index} url={`/articles/${post.slug}/`}/>
      ))
    }
    </div>
    </section>

  </main>
</Layout>


