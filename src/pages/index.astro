---
import Hero from "@/components/layout/home/hero.astro";
import Layout from "../layouts/Layout.astro";
import Alert from "@/components/common/alert/alert.astro";
import About from "@/components/layout/home/about.astro";
import Experience from "@/components/layout/home/experience/experience.astro";
import Projects from "@/components/layout/home/projects/projects.astro"
---

<Layout title="Anir.me">
  <main class="text-center text-8xl text-white">
    <Hero />
    <About />
    <Experience />
    <Projects/>

    <div
      id="contact"
      class="main-section border-gray-100 flex min-h-screen w-full items-center justify-center border"
    >
      Contact
    </div>
    <Alert />
  </main>
</Layout>

<style>
  #projects:target {
    color: red;
  }
</style>
