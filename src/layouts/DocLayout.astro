---
import Navbar from "@/components/documentation/navbar.astro";
import Sidebar from "@/components/documentation/sidebar.astro";
import { ViewTransitions } from "astro:transitions";
import "../styles/global-style.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-purple-light" transition:animate="slide">
    <Navbar />
    <Sidebar />
    <slot />
  </body>
</html>
